<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="hero">
        <div id="myCarousel" class="carousel slide full-carousel" data-ride="carousel">
            <div class="overlay-header">
                <img src="/img/logo.png" class="logo">
                <a href="/login" class="login-btn">Log In</a>
            </div>

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="/img/img1.jpg" alt="">
                </div>
                <div class="item">
                    <img src="/img/img2.jpg" alt="">
                </div>
                <div class="item">
                    <img src="/img/img3.jpg" alt="">
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

<div class="container events-list" style="margin-top: 40px;">
    <h2>Upcoming Events</h2>
    <% events.forEach(event => { %>
        <div class="event-card row" style="border-bottom: 1px solid #ccc; padding: 20px 0;">
            <!-- Imaginea evenimentului -->
            <div class="col-sm-3">
                <img src="/img/logo.png" 
                     class="event-img img-responsive" 
                     alt="Event image" 
                     style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
            </div>

            <!-- Detalii eveniment -->
            <div class="col-sm-6">
                <h4><%= event.title %></h4>
                <p><%= event.description %></p>
                <p><strong>Locație:</strong> <%= event.location %></p>
            </div>

            <!-- Dată + Buton -->
            <div class="col-sm-3 text-right">
                <p><strong>
                    <%= new Date(event.event_date).toLocaleDateString("ro-RO", { day: "2-digit", month: "long", year: "numeric" }) %>
                </strong></p>
                <a href="/event/<%= event.id %>" class="btn btn-primary">Accesează</a>
            </div>
        </div>
    <% }) %>
</div>

</body>
</html>
